{{$app := .AppName | kebabcase}}

apiVersion: v1
kind: Service
metadata:
  name: {{$app}}
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: {{$app}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{$app}}
spec:
  replicas: {{.AppReplicas}}
  selector:
    matchLabels:
      app: {{$app}}
  template:
    metadata:
      labels:
        app: {{$app}}
    spec:
      containers:
      - name: {{$app}}
        image: xebialabsunsupported/rest-o-rant-api
        ports:
        - containerPort: 8080
